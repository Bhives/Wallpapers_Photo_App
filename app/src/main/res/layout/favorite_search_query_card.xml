<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favoriteQueryCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin_from_card"
    android:background="@drawable/rounded_bottom_navigation">

    <TextView
        android:id="@+id/favoriteQueryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_border_margin"
        android:layout_marginLeft="@dimen/default_border_margin"
        android:textSize="@dimen/query_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/favoriteQueryInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_border_margin"
        android:layout_marginLeft="@dimen/default_border_margin"
        android:textSize="@dimen/query_info_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/removeFromFavoritesButton"
        android:layout_width="@dimen/favorite_toggle_button_size"
        android:layout_height="@dimen/favorite_toggle_button_size"
        android:layout_marginEnd="@dimen/card_margin_from_card"
        android:layout_marginRight="@dimen/card_margin_from_card"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:src="@drawable/ic_favorite_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>