<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/common_margin"
    android:layout_marginRight="@dimen/common_margin"
    tools:context=".ui.fragments.CurrentPhotoFragment">

    <ImageView
        android:id="@+id/selectedPhotoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/selectedPhotoImageView"
        app:layout_constraintTop_toBottomOf="@id/selectedPhotoImageView" />

    <TextView
        android:id="@+id/photoDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/selectedPhotoImageView"
        app:layout_constraintTop_toBottomOf="@id/authorTextView" />

    <TextView
        android:id="@+id/likesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/selectedPhotoImageView"
        app:layout_constraintTop_toBottomOf="@id/photoDateTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>